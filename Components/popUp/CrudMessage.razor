
<div class="crudMessageStyle @(isOpen ? "open" : "")">

	@if(success)
	{
		<div style="background:#31c531; place-content:center;  padding:13px;font-weight:600">
			@message
		</div>
	}
	else
	{
		<div style="background:#d94646; place-content:center; padding:13px;font-weight:600">
			@message
		</div>
	}
</div>

@code {
	[Parameter]
	public string color { get; set; }

	[Parameter]
	public string message { get; set; }

	[Parameter]
	public bool success { get; set; }

	[Parameter]
	public EventCallback<bool> close { get; set; }

	[Parameter]
	public bool isOpen { get; set; }

	protected override async Task OnParametersSetAsync()
	{
		if (isOpen == true){
			await Task.Delay(3000);

			await close.InvokeAsync();

			await Task.Delay(3000);
		}
		
	}

}
